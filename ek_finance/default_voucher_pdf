            $pdf->Cell(100,5,$arr['line']->localcurrency . ' ' . $arr['line']->currency,0,1);
            if($line->tax > 0) {
              $pdf->Cell(75,5,t('include tax') ,0,0);
              $pdf->Cell(100,5,number_format($arr['line']->tax,2) . ' ' . $arr['line']->currency,0,1);  
